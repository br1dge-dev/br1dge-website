---
// Strudel Proof of Concept - Test Page
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Strudel PoC</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: 'SF Mono', 'Fira Code', monospace;
      background: #000;
      color: #fff;
      min-height: 100vh;
      overflow: hidden;
    }
    
    /* Code panel - left side */
    #code-panel {
      position: fixed;
      top: 1rem;
      left: 1rem;
      bottom: 6rem;
      font-size: 11px;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.3);
      background: rgba(0, 0, 0, 0.5);
      padding: 1rem;
      border-radius: 4px;
      width: 400px;
      z-index: 100;
      overflow-y: auto;
    }
    #code-panel .line {
      padding: 2px 4px;
      border-radius: 2px;
      transition: all 0.05s;
    }
    #code-panel .line.active {
      color: #39ff14;
      background: rgba(57, 255, 20, 0.1);
      text-shadow: 0 0 10px rgba(57, 255, 20, 0.3);
    }
    #code-panel .line-lead.active { color: #ff6b35; text-shadow: 0 0 10px rgba(255, 107, 53, 0.3); }
    #code-panel .line-bass.active { color: #d4a574; text-shadow: 0 0 10px rgba(212, 165, 116, 0.3); }
    #code-panel .line-hihat.active { color: #aaa; text-shadow: 0 0 10px rgba(255, 255, 255, 0.3); }
    #code-panel .line-kick.active { color: #ddd; text-shadow: 0 0 10px rgba(255, 255, 255, 0.3); }
    
    /* Controls - top right */
    #controls {
      position: fixed;
      top: 1rem;
      right: 1rem;
      display: flex;
      gap: 0.5rem;
      z-index: 100;
    }
    #controls button {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: rgba(255, 255, 255, 0.6);
      width: 36px;
      height: 36px;
      border-radius: 4px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 16px;
    }
    #controls button:hover { background: rgba(255, 255, 255, 0.2); }
    #controls button.active { background: rgba(34, 139, 34, 0.3); border-color: #39ff14; color: #39ff14; }
    
    /* Status indicator */
    #status {
      position: fixed;
      top: 1rem;
      right: 120px;
      font-size: 11px;
      color: #888;
      padding: 0.5rem 1rem;
      background: rgba(0,0,0,0.3);
      border-radius: 4px;
    }
    #status.playing { color: #39ff14; }
    
    /* Canvas area placeholder */
    #canvas-area {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 6rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #222;
      font-size: 2rem;
      z-index: 0;
    }
    
    /* Bottom panel */
    #test-panel {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(20, 20, 20, 0.95);
      border-top: 1px solid #333;
      padding: 1rem 2rem;
    }
    #test-panel h2 {
      font-size: 0.7rem;
      color: #666;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }
    .test-buttons { display: flex; gap: 0.5rem; flex-wrap: wrap; }
    .test-buttons button {
      background: #222;
      color: #aaa;
      border: 1px solid #444;
      padding: 0.5rem 1rem;
      cursor: pointer;
      font-size: 0.85rem;
      border-radius: 4px;
    }
    .test-buttons button:hover { background: #333; color: #fff; }
    .test-buttons button.playing { background: #1a3d1a; border-color: #39ff14; color: #39ff14; }
    
    #log {
      font-family: monospace;
      font-size: 0.75rem;
      color: #0f0;
      margin-top: 0.5rem;
    }
  </style>
</head>
<body>
  <!-- Code panel with live ticking -->
  <div id="code-panel"></div>
  
  <!-- Status -->
  <div id="status">Stopped</div>
  
  <!-- Controls -->
  <div id="controls">
    <button id="toggleCode" title="Toggle Code">üëÅ</button>
    <button id="toggleSound" title="Toggle Sound">üîä</button>
  </div>
  
  <!-- Canvas -->
  <div id="canvas-area">[ br1dge canvas ]</div>
  
  <!-- Test panel -->
  <div id="test-panel">
    <h2>Strudel PoC - Live Code Tracker</h2>
    <div class="test-buttons">
      <button id="init">1. Initialize</button>
      <button id="play">2. Play</button>
      <button id="stop">3. Stop</button>
      <button id="sfx">4. SFX</button>
    </div>
    <div id="log">Click "Initialize" to begin</div>
  </div>

  <script>
    import * as Strudel from '../lib/strudel/poc-controller';
    
    const logEl = document.getElementById('log') as HTMLDivElement;
    const codePanel = document.getElementById('code-panel') as HTMLDivElement;
    const statusEl = document.getElementById('status') as HTMLDivElement;
    let isPlaying = false;
    let tickInterval: any = null;
    
    const TRACK_LINES = [
      { id: 'lead1', text: `$: n("<0 4 0 9 7>*16".add("<7 _ _ 6 5 _ _ 6>*2")`, class: 'lead' },
      { id: 'lead2', text: `.scale("g:minor").s("sawtooth").cut(1)`, class: 'lead' },
      { id: 'lead3', text: `.lpf(sine.range(200,2000).slow(8)).delay(.6).delayfeedback(.3)`, class: 'lead' },
      { id: 'lead4', text: `.pan(rand).fm(.8).gain(0.5)`, class: 'lead' },
      { id: 'bass1', text: `$: n("<7 _ _ 6 5 _ <5 3> <6 4>>*2")`, class: 'bass' },
      { id: 'bass2', text: `.scale("g:minor").s("sawtooth").spread(.5).room(.2)`, class: 'bass' },
      { id: 'bass3', text: `.lpf(sine.range(300,2000).slow(8)).gain(0.5)`, class: 'bass' },
      { id: 'hihat', text: `$: s("hh*8").gain(0.4)`, class: 'hihat' },
      { id: 'kick', text: `$: s("bd:2!4").gain(0.6)`, class: 'kick' },
    ];
    
    // Render code panel
    function renderCode() {
      codePanel.innerHTML = TRACK_LINES.map(line => 
        `<div class="line ${line.class}" data-id="${line.id}">${escapeHtml(line.text)}</div>`
      ).join('');
    }
    
    function escapeHtml(s: string) {
      return s.replace(/</g, '<').replace(/>/g, '>');
    }
    
    function log(msg: string) {
      const time = new Date().toLocaleTimeString();
      logEl.textContent = `[${time}] ${msg}`;
    }
    
    // Simple tick visualizer - highlights lines based on beat
    function startTicking() {
      let beat = 0;
      const beatLines: Record<string, string[]> = {
        lead: ['lead1', 'lead2', 'lead3', 'lead4'],
        bass: ['bass1', 'bass2', 'bass3'],
        hihat: ['hihat'],
        kick: ['kick']
      };
      
      tickInterval = setInterval(() => {
        // Clear all
        document.querySelectorAll('#code-panel .line').forEach(el => el.classList.remove('active'));
        
        // Highlight based on beat pattern (16-step cycle)
        const step = beat % 16;
        
        // Lead on most steps
        if (step < 16) {
          const leadLine = beatLines.lead[step % 4];
          document.querySelector(`[data-id="${leadLine}"]`)?.classList.add('active');
        }
        // Bass every 4 steps
        if (step % 4 === 0) {
          const bassLine = beatLines.bass[(step / 4) % 3];
          document.querySelector(`[data-id="${bassLine}"]`)?.classList.add('active');
        }
        // Hi-hat every 2 steps
        if (step % 2 === 0) {
          document.querySelector('[data-id="hihat"]')?.classList.add('active');
        }
        // Kick pattern
        if (step === 0 || step === 4 || step === 8 || step === 12) {
          document.querySelector('[data-id="kick"]')?.classList.add('active');
        }
        
        beat++;
      }, 125); // ~120 BPM = 125ms per 16th note
    }
    
    function stopTicking() {
      if (tickInterval) {
        clearInterval(tickInterval);
        tickInterval = null;
      }
      document.querySelectorAll('#code-panel .line').forEach(el => el.classList.remove('active'));
    }
    
    // Initialize
    document.getElementById('init')!.onclick = async () => {
      log('Initializing Strudel...');
      try {
        await Strudel.init();
        renderCode();
        log('‚úì Strudel ready! Code loaded.');
      } catch (e) {
        log(`‚úó Error: ${e}`);
      }
    };
    
    // Play
    const playBtn = document.getElementById('play') as HTMLButtonElement;
    playBtn.onclick = async () => {
      if (!Strudel.isReady()) { log('‚úó Initialize first!'); return; }
      try {
        await Strudel.playFullTrack();
        isPlaying = true;
        playBtn.classList.add('playing');
        statusEl.textContent = 'Playing';
        statusEl.classList.add('playing');
        startTicking();
        log('‚úì Playing');
      } catch (e) { log(`‚úó Error: ${e}`); }
    };
    
    // Stop
    document.getElementById('stop')!.onclick = async () => {
      await Strudel.stop();
      isPlaying = false;
      playBtn.classList.remove('playing');
      statusEl.textContent = 'Stopped';
      statusEl.classList.remove('playing');
      stopTicking();
      log('‚úì Stopped');
    };
    
    // SFX
    document.getElementById('sfx')!.onclick = async () => {
      if (!Strudel.isReady()) { log('‚úó Initialize first!'); return; }
      await Strudel.triggerSfx();
      log('‚úì SFX');
    };
    
    // Toggle code
    const toggleCodeBtn = document.getElementById('toggleCode') as HTMLButtonElement;
    toggleCodeBtn.onclick = () => {
      codePanel.style.display = codePanel.style.display === 'none' ? 'block' : 'none';
      toggleCodeBtn.classList.toggle('active', codePanel.style.display !== 'none');
    };
    
    // Toggle sound
    const toggleSoundBtn = document.getElementById('toggleSound') as HTMLButtonElement;
    let muted = false;
    toggleSoundBtn.onclick = () => {
      muted = !muted;
      if (muted) {
        Strudel.stop();
        isPlaying = false;
        playBtn.classList.remove('playing');
        statusEl.textContent = 'Muted';
        statusEl.classList.remove('playing');
        stopTicking();
      }
      toggleSoundBtn.textContent = muted ? 'üîá' : 'üîä';
    };
    
    // Initial render
    renderCode();
  </script>
</body>
</html>