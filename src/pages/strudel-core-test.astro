---
// Strudel Core Integration Test - using bundled module
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Strudel Core Test</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body { 
      background: #000; 
      color: #fff; 
      font-family: monospace;
      padding: 2rem;
    }
    button {
      background: #222;
      color: #fff;
      border: 1px solid #444;
      padding: 0.75rem 1.5rem;
      cursor: pointer;
      margin: 0.5rem;
    }
    button:hover { background: #333; }
    #log { margin-top: 1rem; color: #0f0; white-space: pre-wrap; }
  </style>
</head>
<body>
  <h1>Strudel Core Bundle Test</h1>
  <div>
    <button id="init">1. Initialize</button>
    <button id="play">2. Play Full Track</button>
    <button id="stop">3. Stop</button>
  </div>
  <div id="log"></div>

  <script type="module">
    // Import from our bundled module (Vite resolves @strudel/* aliases)
    import * as Strudel from '../lib/strudel/core-bundle.ts';
    
    const logEl = document.getElementById('log');
    function log(msg) {
      logEl.textContent = msg;
    }
    
    document.getElementById('init').onclick = async () => {
      log('Initializing...');
      try {
        const result = await Strudel.init();
        log('✓ Core initialized! ' + (result.ready ? 'Ready' : 'Failed'));
      } catch (e) {
        log('Error: ' + e);
      }
    };
    
    document.getElementById('play').onclick = async () => {
      const result = await Strudel.playTrack();
      if (result.success) {
        log('✓ Playing! Check console.');
      } else {
        log('Error: ' + result.error);
      }
    };
    
    document.getElementById('stop').onclick = async () => {
      await Strudel.stop();
      log('✓ Stopped');
    };
  </script>
</body>
</html>
