---
// Strudel Core Integration Test - direct inline script
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Strudel Core Test</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body { 
      background: #000; 
      color: #fff; 
      font-family: monospace;
      padding: 2rem;
    }
    button {
      background: #222;
      color: #fff;
      border: 1px solid #444;
      padding: 0.75rem 1.5rem;
      cursor: pointer;
      margin: 0.5rem;
    }
    button:hover { background: #333; }
    #log { margin-top: 1rem; color: #0f0; white-space: pre-wrap; }
  </style>
</head>
<body>
  <h1>Strudel Core Direct Test</h1>
  <div>
    <button id="init">1. Initialize</button>
    <button id="play">2. Play Full Track</button>
    <button id="stop">3. Stop</button>
  </div>
  <div id="log"></div>

  <script type="module">
    // These imports work because they're in a .astro file bundled by Vite
    // Vite's resolve.alias will handle the @strudel/* paths
    import { init, note, n, s } from '@strudel/core';
    import { getAudioContext, webaudioOutput } from '@strudel/webaudio';
    import { transpile } from '@strudel/transpiler';
    
    let audioCtx = null;
    
    const logEl = document.getElementById('log');
    function log(msg) {
      logEl.textContent = msg;
    }
    
    document.getElementById('init').onclick = async () => {
      log('Initializing Strudel...');
      try {
        audioCtx = getAudioContext();
        await audioCtx.resume();
        log('✓ AudioContext ready');
        console.log('Strudel imports:', { init, note, n, s, getAudioContext, transpile });
      } catch (e) {
        log('Error: ' + e);
      }
    };
    
    document.getElementById('play').onclick = async () => {
      if (!audioCtx) { log('Initialize first!'); return; }
      
      log('Playing...');
      
      const code = `$: n("<0 4 0 9 7>*16".add("<7 _ _ 6 5 _ _ 6>*2")).scale("g:minor").trans(-12)
  .o(3).s("sawtooth").lpf(sine.range(200, 2000).slow(8))
  .delay(.6).pan(rand)
  .fm(.8).fmwave('white')

$: n("<7 _ _ 6 5 _  <5 3> <6 4>>*2").scale("g:minor").trans(-24)
  .detune(rand)
  .o(4).s("supersaw").lpf(sine.range(400, 2000).slow(8))

$: s("hh*8").gain(0.5)

$: s("bd:2!4")
  .duck("3:4:5:6")
  .duckdepth(.8)
  .duckattack(.16)`;
      
      try {
        const patterns = transpile(code);
        console.log('Patterns:', patterns);
        await webaudioOutput(patterns, audioCtx.currentTime);
        log('✓ Playing! Check console.');
      } catch (e) {
        log('Error: ' + e);
        console.error(e);
      }
    };
    
    document.getElementById('stop').onclick = async () => {
      if (audioCtx) {
        audioCtx.suspend();
        audioCtx.resume();
        log('✓ Stopped');
      }
    };
  </script>
</body>
</html>
