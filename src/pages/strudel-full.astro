---
// Full Strudel REPL Integration
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Strudel REPL - Full</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body { 
      background: #000; 
      color: #fff; 
      height: 100%; 
      overflow: hidden;
    }
    
    #repl-container {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
    }
    
    strudel-editor {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      --theme: dark;
    }
  </style>
</head>
<body>
  <div id="repl-container">
    <strudel-editor id="repl"></strudel-editor>
  </div>

  <script type="module">
    // Import the full REPL component from local node_modules
    import { StrudelRepl } from '@strudel/repl';
    
    // Register the custom element if not already done
    if (!customElements.get('strudel-editor')) {
      customElements.define('strudel-editor', StrudelRepl);
    }
    
    // Get the element
    const repl = document.getElementById('repl');
    
    // The original track code
    const code = `$: n("<0 4 0 9 7>*16".add("<7 _ _ 6 5 _ _ 6>*2")).scale("g:minor").trans(-12)
  .o(3).s("sawtooth").lpf(sine.range(200, 2000).slow(8))
  .delay(.6).pan(rand)
  .fm(.8).fmwave('white')

$: n("<7 _ _ 6 5 _  <5 3> <6 4>>*2").scale("g:minor").trans(-24)
  .detune(rand)
  .o(4).s("supersaw").lpf(sine.range(400, 2000).slow(8))

$: s("hh*8").gain(0.5)

$: s("bd:2!4")
  .duck("3:4:5:6")
  .duckdepth(.8)
  .duckattack(.16)`;
    
    // Set the code after component is ready
    function setCodeWhenReady() {
      const editor = document.getElementById('repl');
      if (editor && editor.setCode) {
        console.log('Setting code...');
        editor.setCode(code);
      } else {
        console.log('Waiting for editor...', editor);
        setTimeout(setCodeWhenReady, 500);
      }
    }
    
    // Start trying after a delay to let component initialize
    setTimeout(setCodeWhenReady, 2000);
  </script>
</body>
</html>
